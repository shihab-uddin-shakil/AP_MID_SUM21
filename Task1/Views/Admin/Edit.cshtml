<h2>Edit</h2>
<div>
    <form action="" method="post">
        <input type="hidden" name="Id" value="@Model.Id">
        <input type="hidden" name="Dept_Id" class="form-control"  value="@Model.Dept_Id" >
        <input type="text" name="Name" value="@Model.Name" class="form-control" placeholder="name..">
        <input type="date" name="DOB"  value="@Model.DOB" class="form-control" placeholder="">
        <input type="text" name="Credit"  value="@Model.Credit" class="form-control" placeholder="ctrdit..">
        <input type="number" name="CGPA" value="@Model.CGPA" step="any" class="form-control" placeholder="cgpa..">
        <input type="submit" class="btn btn-block" value="Edit" />
    </form>
</div>

